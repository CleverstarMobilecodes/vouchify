<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.DesignDemo">
        <!-- Customize your theme here. -->
    </style>

    <style name="Base.Theme.DesignDemo" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorAccent">@color/color_primary</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorControlNormal">@color/black</item>
    </style>

    <style name="newDialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ThemeOverlay.MyApp.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="autoCompleteTextViewStyle">@style/MyAutoCompleteTextView.SearchView</item>
        <item name="queryBackground">@android:color/transparent</item>
    </style>

    <style name="MyAutoCompleteTextView.SearchView" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textColor">@color/brown</item>
        <item name="android:textColorHint">@color/brown</item>
        <item name="android:textSize">@dimen/search_view_text</item>
    </style>

    <style name="authButton">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">15dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_auth_sign_up</item>
        <item name="android:textSize">@dimen/btn_text_size</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="itemHome">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="searchTitle">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textColor">#565656</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>
    <style name="txtemptyTheme">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#565656</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>
</resources>
