<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/layout_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:orientation="vertical"
        android:padding="@dimen/auth_screen_padding">

        <com.vouchify.vouchify.view.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/auth_step_button_margin_top"
            android:layout_marginTop="@dimen/auth_step_button_margin_top"
            android:gravity="center"
            android:text="@string/friends_connect_title"
            android:textColor="@color/black"
            android:textSize="@dimen/auth_content_title"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="@dimen/auth_screen_padding"
            android:layout_marginStart="@dimen/auth_screen_padding"
            android:layout_marginTop="@dimen/auth_view_spacing"
            android:background="@color/grey" />

        <LinearLayout
            android:id="@+id/friends_btn_facebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/auth_screen_padding"
            android:layout_marginStart="@dimen/auth_screen_padding"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="3dp">

            <com.vouchify.vouchify.view.CustomImageButton
                android:id="@+id/friends_imv_fb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_fb_contacts" />

            <com.vouchify.vouchify.view.CustomClickTextView
                android:id="@+id/friends_txt_fb_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="@string/view_fb_contacts"
                android:textColor="@color/black"
                android:textSize="@dimen/btn_text_size" />

            <com.vouchify.vouchify.view.CustomImageButton
                android:id="@+id/friends_imv_facebook_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_details" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="@dimen/auth_screen_padding"
            android:layout_marginStart="@dimen/auth_screen_padding"
            android:background="@color/grey" />

        <LinearLayout
            android:id="@+id/friends_btn_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/auth_screen_padding"
            android:layout_marginStart="@dimen/auth_screen_padding"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="3dp">

            <com.vouchify.vouchify.view.CustomImageButton
                android:id="@+id/friends_imv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_phone_contacts" />

            <com.vouchify.vouchify.view.CustomClickTextView
                android:id="@+id/friends_txt_phone_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="@string/view_phone_contacts"
                android:textColor="@color/black"
                android:textSize="@dimen/btn_text_size" />

            <com.vouchify.vouchify.view.CustomImageButton
                android:id="@+id/friends_imv_phone_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_details" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="@dimen/auth_screen_padding"
            android:layout_marginStart="@dimen/auth_screen_padding"
            android:background="@color/grey" />
    </LinearLayout>
</FrameLayout>