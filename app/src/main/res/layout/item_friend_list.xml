<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.vouchify.vouchify.view.CircularImageView
        android:id="@+id/item_friend_imv_profile"
        android:layout_width="@dimen/item_friend_image"
        android:layout_height="@dimen/item_friend_image"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <com.vouchify.vouchify.view.CustomClickTextView
            android:id="@+id/item_friend_txt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black" />

        <com.vouchify.vouchify.view.CustomClickTextView
            android:id="@+id/item_friend_txt_voucher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_friend_voucher"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="@dimen/item_friend_text" />
    </LinearLayout>
</LinearLayout>