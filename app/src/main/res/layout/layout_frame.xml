<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/activity_ll_bottom"
        android:contentDescription="@null"
        android:src="@drawable/imv_background" />

    <FrameLayout
        android:id="@+id/activity_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.vouchify.vouchify.view.CustomTextView
        android:id="@+id/error_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/activity_ll_bottom"
        android:layout_marginBottom="@dimen/error_txt_margin"
        android:gravity="center"
        android:textColor="@color/red"
        android:textSize="@dimen/error_txt" />

    <LinearLayout
        android:id="@+id/activity_ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <android.support.design.widget.TabLayout
            android:id="@+id/activity_bottom_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:visibility="gone"
            app:tabIndicatorHeight="0dp" />
    </LinearLayout>
</RelativeLayout>