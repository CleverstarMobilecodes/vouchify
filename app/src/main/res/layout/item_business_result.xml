<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <com.vouchify.vouchify.view.CustomImageButton
        android:id="@+id/item_business_result_imv"
        android:layout_width="@dimen/item_friend_image"
        android:layout_height="@dimen/item_friend_image"
        android:layout_margin="5dp"
        android:src="@mipmap/ic_launcher" />

    <com.vouchify.vouchify.view.CustomClickTextView
        android:id="@+id/item_business_result_txt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/item_business_result_imv"
        android:layout_toStartOf="@+id/item_business_result_txt_distance"
        android:textColor="@color/black"
        android:textSize="@dimen/item_vouches_name"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_business_result_txt_name"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/item_business_result_imv"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.vouchify.vouchify.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/business_all_vouches"
            android:textColor="@color/brown"
            android:textSize="@dimen/item_vouches_name" />

        <com.vouchify.vouchify.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:drawableEnd="@drawable/ic_vouches_count"
            android:textColor="@color/color_primary"
            android:textSize="@dimen/item_vouches_name" />
    </LinearLayout>

    <com.vouchify.vouchify.view.CustomClickTextView
        android:id="@+id/item_business_result_txt_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:textSize="@dimen/item_vouches_time" />
</RelativeLayout>